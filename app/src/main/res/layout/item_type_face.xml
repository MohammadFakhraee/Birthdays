<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/circle_image_medium"
    android:layout_height="@dimen/circle_image_medium"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/gray100"
        app:civ_border_color="@color/colorAccent" />

    <TextView
        android:id="@+id/fontPrevTextView"
        style="@style/TextTimeCounter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/font_preview_text"
        android:textColor="@color/white" />
</FrameLayout>