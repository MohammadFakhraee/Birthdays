<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray200" />
            <corners android:radius="@dimen/app_radius" />
            <stroke android:width="@dimen/line_width" android:color="@color/gray300" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/app_radius" />
            <solid android:color="@color/gray100" />
            <stroke android:width="@dimen/line_width" android:color="@color/gray200" />
        </shape>
    </item>
</selector>