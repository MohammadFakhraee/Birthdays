<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/shabnam</item>
    </style>

    <style name="DefFragment" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NumberPicker" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="DefBtn" parent="AppTheme">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="DefBtn.Primary" parent="DefBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>

    <style name="TextSmall" parent="AppTheme">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextSmall.Highlight" parent="TextSmall">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextMain" parent="AppTheme">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle" parent="TextMain">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextTimeCounter" parent="AppTheme">
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextWeekTitle" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
<!--        <item name="android:padding">@dimen/padding</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="RecyclerView" parent="AppTheme">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="GroupView" parent="AppTheme">
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CalendarDay" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="BotNav" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="StoryImageBtn" parent="AppTheme" >
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">@drawable/bg_circle_transparent_black</item>
    </style>

    <style name="StoryImgBtnWhiteTint" parent="StoryImageBtn">
        <item name="android:tint">@color/white</item>
    </style>
</resources>
